{
  "autorun": false,
  "autokill": true,
  "terminals": [
    {
      "name": "Development",
      "cwd": "[workspaceFolder]",
      "command": "yarn dev",
      "persistent": "node_project_starter_kit_development",
      "recycle": true,
      "open": false,
      "focus": false,
      "execute": true,
      "onlyMultiple": true
    },
    {
      "name": "Testing",
      "cwd": "[workspaceFolder]",
      "command": "yarn test --watchAll",
      "persistent": "node_project_starter_kit_testing",
      "recycle": true,
      "open": false,
      "focus": false,
      "execute": true,
      "onlyMultiple": true
    }
  ]
}
